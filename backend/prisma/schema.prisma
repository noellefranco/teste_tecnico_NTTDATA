generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Playlist {
  id    Int    @id @default(autoincrement())
  name  String
  songs Song[]
}

model Song {
  id          Int      @id @default(autoincrement())
  title       String
  artist      String
  duration    Int
  playlistId  Int
  playlist    Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
}
